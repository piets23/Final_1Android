<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.piets.hockeymanagement.Admin.AddOpponent_Fragment">


    <TextView
        android:id="@+id/tv_opponent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_size"
        android:text="@string/tv_opponent_name"
        />

    <EditText
        android:id="@+id/edt_opponent_name"
        android:layout_width="@dimen/edt_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableStart="@drawable/ic_team"
        android:layout_gravity="center_horizontal"
        android:fontFamily="monospace"
        android:drawablePadding="@dimen/dp_15"
        android:hint="@string/edt_opponent_name_hint"
        />

    <Button
        android:id="@+id/btn_submit_opponent"
        android:layout_width="@dimen/btn_custom_width"
        android:layout_height="@dimen/btn_custom_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/rounded_button"
        android:shadowColor="@color/colorAccent"
        android:text="@string/btn_submit_opponent"
        android:textColor="@color/primaryText" />
</LinearLayout>
