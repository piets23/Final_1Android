<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.piets.hockeymanagement.Coach.MatchesMenu_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/ic_logo_foreground"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_user_logged_in_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="User that is logged in email"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"/>

    <TextView
        android:id="@+id/tv_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_coach"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_match_line_up"
        android:layout_width="@dimen/btn_custom_width"
        android:layout_height="@dimen/btn_custom_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/rounded_button"
        android:shadowColor="@color/colorAccent"
        android:text="@string/btn_match_line_up"
        android:textColor="@color/primaryText"

        />

    <Button
        android:id="@+id/btn_enter_match_stats"
        android:layout_width="@dimen/btn_custom_width"
        android:layout_height="@dimen/btn_custom_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/rounded_button"
        android:shadowColor="@color/colorAccent"
        android:text="@string/btn_enter_match_stats"
        android:textColor="@color/primaryText"
        />
</LinearLayout>
