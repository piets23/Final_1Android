<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:id="@+id/LinearWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/lighterroundedbutton"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <Button
            android:id="@+id/btnWidget"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/dp_5"
            android:background="@mipmap/ic_logo_foreground"
            android:padding="@dimen/dp_5" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearWidget"
        android:layout_alignEnd="@+id/LinearWidget"

        android:layout_marginTop="2dp"
        android:layout_marginEnd="7dp"
        android:text="Hockey"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold" />

</RelativeLayout>