<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.piets.hockeymanagement.Coach.Coach_MatchForTeams_Activity">

    <TextView
        android:id="@+id/tv_select_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="@string/choose_match_from_the_list"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/tv_no_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="@string/if_there_is_no_match_create_one_in_the_match_lineup_menu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        />

    <ListView
        android:id="@+id/lvCoachMatches"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
